<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/register">

    <LinearLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginTop="100dp"
        android:gravity="center">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="在线通讯录"
            android:textColor="#fff"
            android:textSize="40sp" />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:gravity="center"
        android:padding="15dip" >

        <TextView
            android:id="@+id/tv_user_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="帐号:"
            android:textColor="#fff"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/login_et_user"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_user_register"
            android:background="@drawable/login_edit"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:hint="用户名（4~8个字符）"
            android:textColorHint="#aaa"
            android:textColor="#fff"
            android:inputType="text"
            android:paddingBottom="7dp"
            android:paddingLeft="9dp"
            android:paddingRight="8dp"
            android:paddingTop="7dp"
            android:singleLine="true"
            android:layout_marginTop="10dp"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_pass_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/login_et_user"
            android:layout_marginTop="18dp"
            android:text="密码:"
            android:textColor="#fff"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/login_et_pass"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_pass_register"
            android:background="@drawable/login_edit"
            android:hint="密码（6~16个字符）"
            android:textColorHint="#aaa"
            android:textColor="#fff"
            android:inputType="textPassword"
            android:paddingBottom="7dp"
            android:paddingLeft="9dp"
            android:paddingRight="8dp"
            android:layout_marginTop="10dp"
            android:paddingTop="7dp"
            android:password="true"
            android:layout_marginBottom="50dp"
            android:singleLine="true"
            android:textSize="15sp" />
        <Button
            android:id="@+id/login_btn_toRegister"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:layout_below="@id/login_et_pass"
            android:layout_alignRight="@id/login_et_user"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="120dp"
            android:background="@drawable/login_btn_cancel"
            android:drawablePadding="5dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="注册"
            android:textSize="15dp" />

        <Button
            android:id="@+id/login_btn_login"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:layout_alignRight="@id/login_et_pass"
            android:layout_below="@id/login_et_pass"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/login_btn_ok"
            android:drawablePadding="5dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="登陆"
            android:textSize="15dp" />
    </RelativeLayout>
</LinearLayout>