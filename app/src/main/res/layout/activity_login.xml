<?xml version="1.0" encoding="utf-8"?>
<com.google.android.flexbox.FlexboxLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:alignContent="center"
    app:alignItems="center"
    app:flexWrap="wrap"
    app:flexDirection="column"
    app:justifyContent="center"
    android:paddingLeft="25dp"
    android:paddingRight="25dp"
    android:background="@drawable/register">


    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_flexGrow="0.5"
        android:gravity="center"
        android:text="在线通讯录"
        android:textColor="#fff"
        android:textSize="40sp" />

    <com.google.android.flexbox.FlexboxLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_flexGrow="0.5"

        app:alignContent="center"
        app:alignItems="center"
        app:flexWrap="wrap"
        app:flexDirection="column"
        app:justifyContent="flex_start"
        >

        <com.google.android.flexbox.FlexboxLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:alignContent="space_around"
            app:alignItems="center"
            app:flexWrap="nowrap"
            app:flexDirection="column"
            app:justifyContent="space_around"

            >

            <com.google.android.flexbox.FlexboxLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:alignContent="center"
                app:alignItems="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                app:flexWrap="nowrap"
                app:flexDirection="row"
                app:justifyContent="center"
                >

                <TextView
                    android:id="@+id/tv_user_register"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:text="帐号:"
                    android:textColor="#fff"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/login_et_user"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/login_edit"
                    app:layout_flexGrow="1"
                    android:padding="8dp"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:hint="用户名（4~8个字符）"
                    android:textColorHint="#aaa"
                    android:textColor="#fff"
                    android:inputType="text"
                    android:singleLine="true"
                    android:textSize="15sp" />

            </com.google.android.flexbox.FlexboxLayout>

            <com.google.android.flexbox.FlexboxLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:alignContent="center"
                app:alignItems="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                app:flexWrap="nowrap"
                app:flexDirection="row"
                app:justifyContent="center"
                >

                <TextView
                    android:id="@+id/tv_pass_register"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="密码:"
                    android:textColor="#fff"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/login_et_pass"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:layout_flexGrow="1"
                    android:padding="8dp"
                    android:background="@drawable/login_edit"
                    android:hint="密码（6~16个字符）"
                    android:textColorHint="#aaa"
                    android:textColor="#fff"
                    android:inputType="textPassword"
                    android:password="true"
                    android:singleLine="true"
                    android:textSize="15sp" />


            </com.google.android.flexbox.FlexboxLayout>



            <com.google.android.flexbox.FlexboxLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                app:alignContent="center"
                app:alignItems="stretch"
                app:flexWrap="nowrap"
                app:flexDirection="row"
                app:justifyContent="space_around"
                >

                <Button
                    android:id="@+id/login_btn_toRegister"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/login_btn_ok"
                    android:drawablePadding="5dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:layout_marginLeft="20dp"
                    android:text="注册"
                    android:textColor="#fff"
                    android:textSize="15dp" />

                <Button
                    android:id="@+id/login_btn_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/login_btn_ok"
                    android:drawablePadding="5dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:layout_marginRight="20dp"
                    android:text="登陆"
                    android:textColor="#fff"
                    android:textSize="15dp" />

            </com.google.android.flexbox.FlexboxLayout>

        </com.google.android.flexbox.FlexboxLayout>

    </com.google.android.flexbox.FlexboxLayout>


</com.google.android.flexbox.FlexboxLayout>