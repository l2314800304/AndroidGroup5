<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/register">

    <LinearLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_contactinsert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#fff"
            android:textSize="25sp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:text="添加联系人"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dip"
        android:padding="15dip">

        <TextView
            android:id="@+id/tv_contact_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="5dp"
            android:text="姓名:"
            android:textColor="#fff"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/et_contact_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_contact_name"
            android:background="@drawable/login_edit"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:paddingLeft="9dp"
            android:paddingTop="7dp"
            android:paddingRight="8dp"
            android:paddingBottom="7dp"
            android:singleLine="true"
            android:textColor="#fff"
            android:textColorHint="#aaa"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_contact_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/et_contact_name"
            android:layout_marginTop="8dp"
            android:text="号码:"
            android:textColor="#fff"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/et_contact_number"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_contact_number"
            android:background="@drawable/login_edit"
            android:paddingLeft="9dp"
            android:paddingTop="7dp"
            android:paddingRight="8dp"
            android:paddingBottom="7dp"
            android:singleLine="true"
            android:textColor="#fff"
            android:textColorHint="#aaa"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btn_insert"
            android:layout_width="306dp"
            android:layout_height="60dp"
            android:layout_below="@id/et_contact_number"
            android:layout_alignRight="@id/et_contact_number"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="53dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/login_btn_ok"
            android:drawablePadding="5dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="添加"
            android:textColor="#fff"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btn_backToFind"
            android:layout_width="306dp"
            android:layout_height="60dp"
            android:layout_below="@id/btn_insert"
            android:layout_alignRight="@id/et_contact_number"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="29dp"
            android:layout_marginRight="13dp"
            android:background="@drawable/login_btn_ok"
            android:drawablePadding="5dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textColor="#fff"
            android:text="返回"
            android:textSize="20dp" />
    </RelativeLayout>

</LinearLayout>