<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_guide_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
>

    <com.androidgroup5.onlinecontact.guidepage.GuideImageLayout
        android:id="@+id/images"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <android.support.v4.view.ViewPager
        android:id="@+id/guide_page"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.androidgroup5.onlinecontact.CircleIndicator
        android:id="@+id/indicator"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true"
        app:ci_background="@android:color/darker_gray"
        app:ci_gravity="center"
        app:ci_margin="10dp"
        app:ci_mode="outside"
        app:ci_radius="5dp"
        app:ci_selected_background="@android:color/white" />
    <Button
        android:id="@+id/start_project"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:text="开启私人订制"
        android:textSize="20sp"
        android:background="#F0F8FF"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="80dp"
        android:visibility="invisible"/>
</RelativeLayout>
